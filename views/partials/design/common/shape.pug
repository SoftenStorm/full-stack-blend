include ../../mixin/CreateReactComponent
.section-container
  .section-title
    | Dimension
  .section-subtitle
    | Size & Position
  .section-body
    +CreateReactComponent('FullStackBlend.Components.DimensionPicker')
  .section-subtitle
    | Minimum & Maximum Size
  .section-body
    +CreateReactComponent('FullStackBlend.Components.BoundaryPicker')
  .section-subtitle
    | Containing Behaviour
  .section-body
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['object-fit'], dropDownMinWidth: 100}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['object-position[0,2]', 'object-position'], dropDownMinWidth: 150}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['object-position[1,2]', 'object-position'], dropDownMinWidth: 150}")
  .section-subtitle
    | Container Behaviour
  .section-body
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['overflow-x']}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['overflow-y']}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['position'], dropDownMinWidth: 80}")
.section-hr
.section-container
  .section-title
    | Appearance
  .section-subtitle
    | Style & Color
  .section-body
    +CreateReactComponent('FullStackBlend.Components.AppearancePicker')
  .section-subtitle
    | Background Options
  .section-body
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['background-image'], dropDownMinWidth: 150}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['background-size'], dropDownMinWidth: 150}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['background-origin']}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['background-clip']}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['background-repeat']}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['background-attachment']}")
  .section-subtitle
    | Blending Options
  .section-body
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['background-blend-mode']}")
    +CreateReactComponent('FullStackBlend.Components.DropDownPicker', "{watchingStyleNames: ['mix-blend-mode']}")
.section-hr
.section-container
  .section-title
    | Transform
  .section-subtitle
    | 3D Control
  .section-body
    +CreateReactComponent('FullStackBlend.Components.Transformer')