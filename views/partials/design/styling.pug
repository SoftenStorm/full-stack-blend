.workspace-container
  .workspace-vertical-container
    .workspace-vertical-panel
      .workspace-tab-container
        .btn-group.btn-group-toggle.d-flex(data-toggle='buttons')
          label.btn.btn-secondary.btn-sm.btn-light.text-secondary.w-100.active(onclick="swap('#arrange')", data-toggle="tooltip", data-placement="bottom", data-html="true")
            input(type='radio', name='options', checked=true)
            | Arrange
          label.btn.btn-secondary.btn-sm.btn-light.text-secondary.w-100(onclick="swap('#shape')", data-toggle="tooltip", data-placement="bottom", data-html="true")
            input(type='radio', name='options', checked=false)
            | Shape
          label.btn.btn-secondary.btn-sm.btn-light.text-secondary.w-100(onclick="swap('#style')", data-toggle="tooltip", data-placement="bottom", data-html="true")
            input(type='radio', name='options', checked=false)
            | Style
  .workspace-vertical-container.full-relative-size
    .workspace-vertical-panel
      .workspace-panel-container.scrollable
        .panel.active(id='arrange')
          include styling/arrange
        .panel(id='shape')
          include styling/shape
        .panel(id='style')
          include styling/style