                                input(type='radio', name='options', checked=false)
                                | Restoration
                      .workspace-vertical-container.full-relative-size
                        .workspace-vertical-panel
                          .workspace-panel-container.scrollable
                            .panel.sidebar-properties-panel.active
                              include html-data/properties
                            .panel.sidebar-permission-panel
                              include html-data/permission
                            .panel.sidebar-restoration-panel
