.workspace-container
  .workspace-horizontal-container
    .workspace-horizontal-panel
      .workspace-container
        .workspace-vertical-container
          .workspace-vertical-panel
            .workspace-panel-container.sidebar
              .workspace-container
                .workspace-vertical-container.full-relative-size
                  .workspace-vertical-panel
                    .workspace-container.siteToolset.popupsToolset.componentsToolset.toolset
                      .workspace-vertical-container(internal-fsb-for="editing", style="display: none;")
                        .workspace-vertical-panel
                          .workspace-tab-container
                            .btn-group.btn-group-toggle.d-flex(data-toggle='buttons')
                              a.btn.btn-secondary.btn-sm.btn-light.text-secondary.sidebar-main-panel.active(id='sidebarAction', onclick="swap('.sidebar-main-panel', null, null, null, null, true)", data-toggle="tooltip", data-placement="bottom", data-html="true", style={width: '86px'})
                                input(type='radio', name='options', checked=true)
                                | Action
                              a.btn.btn-secondary.btn-sm.btn-light.text-secondary.sidebar-shape-panel(id='formatStyle', onclick="swap('.sidebar-format-panel', null, null, null, null, true)", data-toggle="tooltip", data-placement="bottom", data-html="true", style={width: '86px'})
                                input(type='radio', name='options', checked=false)
                                | Format
                              a.btn.btn-secondary.btn-sm.btn-light.text-secondary.sidebar-shape-panel(id='sidebarStyle', onclick="swap('.sidebar-style-panel', null, null, null, null, true)", data-toggle="tooltip", data-placement="bottom", data-html="true", style={width: '86px'})
                                input(type='radio', name='options', checked=false)
                                | Style
                      .workspace-vertical-container.full-relative-size(internal-fsb-for="editing", style="display: none;")
                        .workspace-vertical-panel
                          .workspace-panel-container.scrollable
                            .panel.sidebar-main-panel.active
                              .workspace-container
                                .workspace-vertical-container
                                  .workspace-vertical-panel
                                    .workspace-panel-container.white
                                      .panel.active(id='design')
                                        include html-design/action/action
                                      .panel(id='animation')
                                        include html-animation/timeline
                                      .panel(id='coding')
                                        include html-coding/coding
                            .panel.sidebar-format-panel
                              include html-common/format/format
                            .panel.sidebar-style-panel
                              include html-common/style/style
                      .workspace-vertical-container.full-relative-size(internal-fsb-not-for="editing")
                        .workspace-vertical-panel
                          .workspace-panel-container
                            include ../common/empty
                    .workspace-container.dataToolset.toolset
                      .workspace-vertical-container
                        .workspace-vertical-panel
                          .workspace-tab-container
                            .btn-group.btn-group-toggle.d-flex(data-toggle='buttons')
                              a.btn.btn-secondary.btn-sm.btn-light.text-secondary.w-100.sidebar-properties-panel.active(id='sidebarProperties', onclick="swap('.sidebar-properties-panel', null, null, null, null, true)", data-toggle="tooltip", data-placement="bottom", data-html="true")
